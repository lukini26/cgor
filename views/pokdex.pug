body
- var varia = 1 ;   
- var counter = 1 ; 
- var bichito  ; 
-console.log(pokedex) ; console.log(JSON.stringify(pokedex)) ;  

div.container.col.xl3
  ul.collection
    while counter < 10
      -bichito=pokedex.pokemon(counter)
      li.collection-item.avatar
        if (typeof bichito.sprites === 'undefined')
          img.material-icons.circle.green 
        else
          if (typeof bichito.sprites.animated === 'undefined')
            img.circle(src=bichito.sprites.normal, alt="")
          else
            img.circle(src=bichito.sprites.animated, alt="")
        
          
        -counter = counter + 1
        span.title= bichito.id
        p= bichito.name
        div.secondary-content
          a(href="#!")
            i.material-icons(style={color: 'black'}) check
            span    
          a(href="#!")
            if(varia = 1)
              i.material-icons(style={color: 'green'}) shopping_cart
            else
              i.material-icons(style={color: 'red'}) shopping_cart
          a(href="#!")
            if(vari = 1)
              i.material-icons(style={color: 'black'}) highlight
          a(href="#!")
            i.material-icons(style={color: 'black'}) add_shopping_cart















